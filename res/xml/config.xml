<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="first_preferencescreen">
    <CheckBoxPreference
            android:key="show_ad"
            android:title="@string/config_title_show_ad"
	    android:defaultValue="true" />
    <CheckBoxPreference
            android:key="hide_ad_on_lock"
            android:title="@string/config_title_hide_ad_on_lock"
	    android:defaultValue="true" />
    <CheckBoxPreference
            android:key="enable_hardware_accel"
            android:title="@string/config_title_enable_hardware_accel"
	    android:defaultValue="true" />
    <Preference
	android:title="@string/config_title_app_version"
	android:summary="@string/app_version" />
</PreferenceScreen> 
